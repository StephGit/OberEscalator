<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OberEscalatorActivity">


    <FrameLayout
        android:id="@+id/frame_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ober_escalator_navigation"
        android:layout_height="0dp"
        android:layout_width="0dp"/>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/ober_escalator_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="start"
        app:menu="@menu/ober_escalator_navgation"
        app:layout_constraintTop_toBottomOf="@id/frame_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/oberEscalator_colorBrand"
        app:itemBackground="@color/oberEscalator_colorBrand"
        app:itemIconTint="@color/oberEscalator_bottom_navigation"
        app:itemTextColor="@color/oberEscalator_bottom_navigation"
        />
</androidx.constraintlayout.widget.ConstraintLayout>